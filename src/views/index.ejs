<!-- src/views/index.ejs -->

<!DOCTYPE html>
<html lang="hr">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ticketing App</title>
  <!-- Uključivanje Tailwind CSS putem CDN-a -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Broj Kreiranih Ulaznica: <%= count %></h1>

    <div class="max-w-md mx-auto bg-white p-8 rounded shadow">
      <h2 class="text-2xl font-semibold mb-4">Kreiraj Novu Ulaznicu</h2>
      <form action="/create" method="POST">
        <div class="mb-4">
          <label for="vatin" class="block text-gray-700">VATIN:</label>
          <input type="text" id="vatin" name="vatin" required class="w-full px-3 py-2 border rounded">
        </div>
        <div class="mb-4">
          <label for="firstName" class="block text-gray-700">Ime:</label>
          <input type="text" id="firstName" name="firstName" required class="w-full px-3 py-2 border rounded">
        </div>
        <div class="mb-4">
          <label for="lastName" class="block text-gray-700">Prezime:</label>
          <input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border rounded">
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Kreiraj Ulaznicu</button>
      </form>
    </div>
  </div>
</body>
</html>
