<!-- src/views/qr.ejs -->

<!DOCTYPE html>
<html lang="hr">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>QR Kod Ulaznice</title>
  <!-- Uključivanje Tailwind CSS putem CDN-a -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Vaš QR Kod za Ulaznicu</h1>
    <div class="max-w-md mx-auto bg-white p-8 rounded shadow text-center">
      <img src="<%= qrCodeDataUrl %>" alt="QR Code" class="mx-auto mb-4">
      <p class="text-gray-600 mb-4">Skenirajte ovaj QR kod ili posjetite URL:</p>
      <a href="<%= ticketUrl %>" class="text-blue-500 hover:underline"><%= ticketUrl %></a>
      <div class="mt-4">
        <a href="/" class="text-blue-500 hover:underline">Povratak na početnu stranicu</a>
      </div>
    </div>
  </div>
</body>
</html>
